@model Shopping_Cart_Web_Application_V1._0.Models.DTOs.ProductViewModel
@{
}
<style>
    .flex-card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%; /* 确保卡片主体高度充分，撑满容器 */
    }
</style>

<h1>Gallery</h1>

<div class="my-2">
    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="input-group">
            <label class="visually-hidden" for="sterm">Search Name</label>
            <div class="col-auto">
                <input type="text" class="form-control" value="@Model.STerm" id="sterm" name="sterm" placeholder="Search by title">
            </div>
            <button type="submit" class="btn btn-outline-secondary">Search</button>
            <a href="/Gallery" class="btn btn-dark">Reset</a>
        </div>
    </form>
</div>

<div class="w-100 mt-4 d-flex flex-wrap ">
    @if (Model?.Products == null || !Model.Products.Any())
    {
        <h5>No result!</h5>
    }
    else
    {
        @foreach (var product in Model.Products)
        {
            <div class="card mx-3 mb-4" style="width: 25%;">
                @if (string.IsNullOrEmpty(product.Image))
                {
                    <img style="width:100%;height:180px" src="/images/NoImage.png" class="card-img-top" alt="...">
                }
                else
                {
                    <img style="width:100%;height:180px" src="/images/@product.Image" class="card-img-top" alt="...">
                }
                <div class="card-body flex-card-body">
                    <div style="display: flex; justify-content: center;">
                        <h4 class="card-title">@product.ProductName</h4>
                    </div>
                    <p class="card-text" style="display: flex; flex-direction: column; justify-content: space-between;">
                        @product.ProductDescription <br />                        
                    </p>
                    <div style="text-align: center; margin-top: auto;">
                        <button type="button" onclick="add(@product.Id)" class="btn btn-primary"><b>$</b>@product.Price &nbsp;&nbsp;&nbsp <b>Add to cart</b></button>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts{
    <script>
        async function add(productId) {
            const isLoggedInResponse = await fetch('/Gallery/IsLoggedIn');
            const isLoggedInResult = await isLoggedInResponse.json();
            if (!isLoggedInResult.isLoggedIn) {
                window.location.href = '/Login';
                return; 
            }
            try {
                var response = await fetch(`Cart/AddItem?ProductId=${productId}`,{
                    method: 'POST'
                });

                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                    window.location.href = "#cartCount";
                }
            }
            catch (err) {
                console.log(err);
            }
        }
    </script>
}